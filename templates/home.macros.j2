{% import 'birds/utility.macros.j2' as birds %}
{% import 'content.macros.j2' as content %}
{% import 'utility.macros.j2' as utility %}

{% macro letter(
  image,
  alt='',
  author='miriam'
) %}
  {{ content.image_block(
    image=image,
    headline=letter_hello(author),
    content=caller()|rst + letter_sig(author),
    class='home-letter',
    do_rst=false
  ) }}
{% endmacro %}


{% macro letter_sig(
  author='miriam'
) %}
  <div class='letter-sig'>
    {{ utility.icon([author, 'sig']|join('-'), size='sig') }}
    <span class='h-card'>{{ birds.get_bird_name(author) }}</span>
  </div>
{% endmacro %}


{% macro letter_hello(
  author='miriam'
) %}
  <span data-media-block>
    {{ utility.icon(author, size='face-small', class='letter-face') }}
    <span class="letter-hello">
      Hi, I’m
      {{ author|capitalize }} —
    </span>
  </span>
{% endmacro %}


{% macro expertise(
  content=none,
  do_rst=true
) %}
  {% set content = content if (content != none) else caller() %}
    <div class="text-block">
      <div class="textblock-headline">
        <h2 class='headline-contrast'>
          <span class='fancy-headline-small'>Experience</span>
          <span class='fancy-headline-large'>Dedicated</span>
          <span class='fancy-headline-light'>Service</span>
          <span class='fancy-headline-small'>for</span>
          <span class='fancy-headline-large'>Large-Scale</span>
          <span class='fancy-headline-light'>Projects</span>
        </h2>
      </div>
      <div class="textblock-content">
        {{ content|rst }}
      </div>
    </div>
{% endmacro %}

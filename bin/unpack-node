#!/bin/bash

mkdir -p node
pushd node

config=`../bin/config.guess`
if [[ $config == *linux* ]]; then
    platform=linux
elif [[ $config == *darwin* ]]; then
    platform=darwin
else
    echo "Unknown platform ${config}!"
    exit 1
fi

if [[ $config == *darwin* || $config == x86_64* ]]; then
    arch=x64
else
    arch=x86
fi

nodefile="../requirements/node-v7.4.0-${platform}-${arch}.tar.xz"

tar --strip-components=1 -Jxf ${nodefile}

PATH=`pwd`/bin:$PATH ./bin/npm install -g npm@4.1.1

popd

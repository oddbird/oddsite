#!/bin/bash

mkdir -p node
pushd node

config=`../bin/config.guess`
if [[ $config == *linux* ]]; then
    platform=linux
elif [[ $config == *darwin* ]]; then
    platform=darwin
else
    echo "Unknown platform ${config}!"
    exit 1
fi

if [[ $config == *darwin* || $config == x86_64* ]]; then
    arch=x64
else
    arch=x86
fi

nodefile="../requirements/node-v8.9.4-${platform}-${arch}.tar.xz"
yarnfile="../requirements/yarn-v1.3.2.tar.gz"

rm -rf ../node/*
rm -rf ../node_modules/
tar --strip-components=1 -Jxf ${nodefile}
tar --strip-components=1 -xzf ${yarnfile}

popd
